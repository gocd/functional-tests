  <pipelines group="first">
    <authorization>
      <admins>
        <user>group1Admin</user>
      </admins>
    </authorization>
    <pipeline name="one">
      <materials>
        <package ref="a5e54bbc-9027-44f7-8f53-b4ddfc8ef3cf"/>
      </materials>
      <stage name="defaultStage">
        <jobs>
          <job name="defaultJob">
            <tasks>
              <exec command="ls"/>
            </tasks>
          </job>
        </jobs>
      </stage>
    </pipeline>
  </pipelines>
  <pipelines group="second">
