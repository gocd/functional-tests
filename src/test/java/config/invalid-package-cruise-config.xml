<cruise xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="cruise-config.xsd" schemaVersion="128">
    <server artifactsdir="artifacts" serverId="twist" tokenGenerationKey="token">
    </server>

    <repositories>

        <repository id="repo-with-dup-and-invalid-keys" name="repo-with-dup-and-invalid-keys">
            <pluginConfiguration id="yum" version="1"/>
            <configuration>
                <property>
                    <key>REPO_URL</key>
                    <value>$repo3</value>
                </property>
                <property>
                    <key>REPO_URL_DUP</key>
                    <value>$repo3</value>
                </property>
            </configuration>
            <packages>
                <package id="pkg-dup-and-invalid-keys" name="pkg-dup-and-invalid-keys">
                    <configuration>
                        <property>
                            <key>PACKAGE_SPEC</key>
                            <value>go-server</value>
                        </property>
                        <property>
                            <key>PACKAGE_SPEC_DUP</key>
                            <value>go-server</value>
                        </property>
                    </configuration>
                </package>
            </packages>
        </repository>
        <repository id="repo-with-empty-key-value" name="repo-with-empty-key-value">
            <pluginConfiguration id="yum" version="1"/>
            <configuration>
                <property>
                    <key>REPO_URL</key>
                    <value/>
                </property>
            </configuration>
            <packages>
                <package id="pkg-with-empty-key-value" name="pkg-with-empty-key-value">
                    <configuration>
                        <property>
                            <key>PACKAGE_SPEC</key>
                            <value/>
                        </property>
                    </configuration>
                </package>
            </packages>
        </repository>
    </repositories>

    <pipelines group="mduErrors">


        <pipeline name="M8" template="A-series">
            <materials>
                <package ref="pkg-dup-and-invalid-keys"/>
            </materials>
        </pipeline>

        <pipeline name="M9" template="A-series">
            <materials>
                <package ref="pkg-with-empty-key-value"/>
            </materials>
        </pipeline>

    </pipelines>


    <templates>



        <pipeline name="A-series">
            <stage name="defaultStage">
                <jobs>
                    <job name="defaultJob">
                        <tasks>
                            <exec command="ls"/>
                        </tasks>
                    </job>
                </jobs>
            </stage>
        </pipeline>


    </templates>

    <agents>
        <agent hostname="missing-agent" ipaddress="10.232.3.1" uuid="missing">
            <resources>
                <resource>missing</resource>
            </resources>
        </agent>
        <agent hostname="denied-agent" ipaddress="10.232.3.2" uuid="denied" isDisabled="true">
            <resources>
                <resource>denied</resource>
            </resources>
        </agent>
    </agents>
</cruise>
