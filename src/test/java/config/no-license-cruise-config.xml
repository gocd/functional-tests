      <stage name="ls-stage">
        <jobs>
          <job name="ls-job">
            <tasks>
              <exec command="echo" args="'hello'"/>
            </tasks>
          </job>
        </jobs>
      </stage>
    </pipeline>
  </pipelines>
  <agents>
    <agent hostname="missing-agent" ipaddress="127.0.0.1" uuid="missing">
      <resources>
        <resource>missing</resource>
      </resources>
    </agent>
  </agents>
</cruise>
